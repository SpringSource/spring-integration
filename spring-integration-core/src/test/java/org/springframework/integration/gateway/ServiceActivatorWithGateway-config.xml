<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<int:service-activator input-channel="inputChannel" output-channel="outputChannel">
		<int:gateway default-request-channel="transformingChannel"/>
	</int:service-activator>
	
	<int:transformer input-channel="transformingChannel" expression="payload.toUpperCase()"/>
	
	<int:channel id="outputChannel">
		<int:queue/>
	</int:channel>

</beans>
