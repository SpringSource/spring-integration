<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/integration"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xmlns:beans="http://www.springframework.org/schema/beans"
			 xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<channel id="channel"/>

	<channel id="scopedChannel" scope="request"/>

	<beans:bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
		<beans:property name="scopes">
			<beans:map>
				<beans:entry key="request" value="org.springframework.web.context.request.RequestScope"/>
			</beans:map>
		</beans:property>
	</beans:bean>

	<beans:bean id="groovyVariableResolver"
				class="org.springframework.integration.groovy.BeanFactoryGroovyVariableResolver"/>

	<beans:bean id="beanFactoryDecorator" class="org.springframework.integration.groovy.FilteredBeanFactoryDecorator">
		<beans:property name="beanFilter">
			<beans:bean class="org.springframework.integration.groovy.GroovyVariableResolverBindingTests.TestBeanFilter"/>
		</beans:property>
	</beans:bean>

</beans:beans>
